@model List<AuctionItemDto>

<div class="container mt-4">
    <h1 class="text-center">Your Orders</h1>
    <div class="row mt-4">
        @foreach (var order in Model)
        {
            <div class="col-md-6">
                <div class="card mb-4 shadow-sm">
                    @if(order.isActive){
                        <div class="card-header bg-primary text-white">
                            Active Auction
                        </div>
                    }
                    else
                    {
                        <div class="card-header bg-primary text-white">
                            Won Auction
                        </div>
                    }
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <span>@order.itemName</span>
                                <span class="float-right">$@order.Bids.Last().BidAmount</span>
                            </li>
                        </ul>
                    </div>
                    <div class="card-footer">
                        <span class="float-right">Order Date: @order.itemEndDate?.ToString("dd MMMM yyyy")</span>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
