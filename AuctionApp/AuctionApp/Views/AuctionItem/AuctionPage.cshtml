@model AuctionItemDto

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ItemImages" class="img-fluid" alt="Product Image">
        </div>
        <div class="col-md-6">
            <h2>@Model.itemName</h2>
            <h5 class="text-muted">@Model.ItemTags</h5>
            <p>@Model.itemDescription</p>
            <div class="d-flex justify-content-between">
                <div>
                    <h5 class="text-muted">Starting Bid:</h5>
                    <h4>@Model.startingBid</h4>
                </div>
                <div>
                    <h5 class="text-muted">Current Bid:</h5>
                    <h4>@Model.currentBid</h4>
                </div>
            </div>
            <div>
                <h5 class="text-muted">Ends on:</h5>
                <h4>@Model.itemEndDate</h4>
            </div>
            <form method="post" asp-controller="Auction" asp-action="PlaceBid">
                <input type="hidden" name="productId" value="@Model.Id" />
                <div class="form-group">
                    <label for="bidAmount">Bid Amount:</label>
                    <input type="number" class="form-control" name="bidAmount" id="bidAmount" min="@Model.currentBid + 1" step="1" required />
                </div>
                <button type="submit" class="btn btn-primary">Place Bid</button>
            </form>
        </div>
    </div>
</div>

<style>
    .img-fluid {
        max-width: 100%;
        height: auto;
    }

    h2 {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    h4 {
        font-size: 1.5rem;
        font-weight: bold;
        margin-top: 0.5rem;
        margin-bottom: 0;
    }

    .text-muted {
        color: #6c757d;
    }

    form {
        margin-top: 1rem;
    }
</style>