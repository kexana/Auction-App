@model AdministrationPanelModel

@{
    ViewData["Title"] = "UserIndex";
}

<h1>UserIndex</h1>

<p>
    <a asp-area="Users" asp-page="/Account/Register">Register New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                User Id
            </th>
            <th>
                Username
            </th>
            <th>
                Email
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => user.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.Email)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=user.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=user.Id}) |
                    @Html.ActionLink("Delete", "Delete", new {id=user.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
