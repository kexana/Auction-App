@model AuctionBidDto
@{
    ViewData["Title"] = "Edit Auction Bid";
}

<div class="container my-4">
    <h1>@ViewData["Title"]</h1>
    <hr />

    <form asp-controller="AuctionBidAdministration" asp-action="Edit" method="post">
        <div class="form-group">
            <label asp-for="BidAmount" class="control-label">Bid Amount</label>
            <input asp-for="BidAmount" class="form-control" />
            <span asp-validation-for="BidAmount" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-controller="AdministrationPanel" asp-action="AuctionBidIndex" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
