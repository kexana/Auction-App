@model AuctionFeedbackDto
@{
    ViewData["Title"] = "Delete Auction Feedback";
}

<div class="container my-4">
    <h1>@ViewData["Title"]</h1>
    <hr />

    <form asp-controller="AuctionFeedbackAdministration" asp-action="Delete" method="post" asp-route-id="@Model.Id">
        <div class="form-group">
            <label asp-for="Item.itemName" class="control-label">Item Name</label>
            <p>@Model.Item.itemName</p>
        </div>

        <div class="form-group">
            <label asp-for="FeedbackText" class="control-label">Feedback Text</label>
            <p>@Model.FeedbackText</p>
        </div>

        <div class="form-group">
            <label asp-for="Rating" class="control-label">Rating</label>
            <p>@Model.Rating</p>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-controller="AdministrationPanel" asp-action="AuctionFeedbackIndex" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
