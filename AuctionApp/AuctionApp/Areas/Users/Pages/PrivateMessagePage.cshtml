@page
@using AuctionApp.ModelDtos;
@model AuctionApp.Areas.Users.Pages.PrivateMessagePageModel
@{

}
<div class="container">
    <h1>Send Private Message to @Model.RecepiantUser.UserName</h1>
    <hr />
    <div class="row d-flex justify-content-center">
        <div class="col-8">
            <div id="messages" class="border p-2 mb-3" style="max-height: 300px; height: 300px; overflow-y: auto;">
                @foreach(AuctionPrivateMessageDto pm in Model.PrivateMessages)
                {
                    <div class="alert alert-secondary rounded-50 m-2 p-2">
                        <small>@pm.Sender.UserName :</small>
                        @pm.Text
                    </div>
                }
            </div>
            <form method="post" class="justify-content-evenly">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Type a message..." id="Text" name="Text" />
                    <button class="btn btn-primary" type="submit" id="send-btn" >Send</button>
                </div>
            </form>
        </div>
    </div>
</div>
